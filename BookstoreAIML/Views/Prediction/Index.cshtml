@model BookstoreAIML.MLModels.CustomerData
@{
    ViewData["Title"] = "Dự đoán hành vi mua hàng";
    Layout = "~/Views/Shared/_LayoutPublich.cshtml";
}

<div class="container mt-5">
    <div class="card shadow rounded">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Dự đoán hành vi mua hàng</h4>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="post">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Tuổi</label>
                        <input asp-for="Age" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Giới tính</label>
                        <select asp-for="Gender" class="form-select">
                            <option>Male</option>
                            <option>Female</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Tổng số lần xem trang</label>
                        <input asp-for="TotalPageViews" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Thời gian trên website (giây)</label>
                        <input asp-for="TimeOnSite" class="form-control" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Số lần mua trước</label>
                        <input asp-for="PreviousPurchases" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Danh mục yêu thích</label>
                        <select asp-for="FavoriteCategory" class="form-select">
                            <option>Books</option>
                            <option>Electronics</option>
                            <option>Clothing</option>
                            <option>Groceries</option>
                            <option>Toys</option>
                        </select>
                    </div>
                </div>

                <button type="submit" class="btn btn-success w-100">Dự đoán</button>
            </form>

            @if (ViewBag.Result != null)
            {
                <div class="alert alert-info mt-4">
                    <h5 class="mb-2">Kết quả: <strong>@ViewBag.Result</strong></h5>
                    <p>Xác suất: <strong>@ViewBag.Probability</strong></p>
                </div>
            }
        </div>
    </div>
</div>
