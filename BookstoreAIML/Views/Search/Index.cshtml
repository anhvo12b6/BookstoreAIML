@model List<BookstoreAIML.Models.ViewModel.ProductSearchViewModel>

<h2>Kết quả tìm kiếm cho "@ViewData["Query"]"</h2>

@if (Model.Count == 0)
{
    <p>Không tìm thấy sách nào phù hợp.</p>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card">
                    <img src="@item.CoverImageURL" class="card-img-top" alt="@item.Title" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.GenreName</p>
                        <p class="card-text text-danger">@item.Price.ToString("N0") đ</p>
                        <a href="/Product/Details/@item.Id" class="btn btn-primary">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
