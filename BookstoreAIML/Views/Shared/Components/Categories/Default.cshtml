@model IEnumerable<BookstoreAIML.Models.GenreModel>
<div class="single-sidebar-widget">
    <div class="wid-title">
        <h5>Categories</h5>
    </div>
    <div class="categories-list">
        @foreach (var item in Model)

        {
            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                <li class="nav-item" role="presentation">
                <a asp-action="Index" asp-controller="Categories" asp-route-id="@item.GenreID">
                   @item.GenreName
                </a>
            </li>
        </ul>
        }
    </div>
</div>