@model IEnumerable<BookstoreAIML.Models.GenreModel>
@{
    ViewData["Title"] = "Danh sách thể loại";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Thêm thể loại</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên thể loại</th>
            <th>Mô tả</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.GenreName</td>
                <td>@item.Description</td>
                <td>@(item.status == 1 ? "Hiện" : "Ẩn")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.GenreID">Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@item.GenreID" class="btn btn-danger btn-sm">
                        Xóa
                    </a>
                    <a asp-action="Details" asp-route-id="@item.GenreID">Chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>
